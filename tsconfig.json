{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2018",
        "module": "esnext",
        "baseUrl": ".",
        "sourceMap": false,
        "moduleResolution": "node",
        "allowJs": false,
        "strict": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "removeComments": false,
        "rootDir": ".",
        "paths": {
            "@dada-element/*": [
                "packages/*"
            ]
        },
        "composite": true,
        "lib": [
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        "**/__tests__/**",
        "**/tests/**",
        "**/dist"
    ]
}